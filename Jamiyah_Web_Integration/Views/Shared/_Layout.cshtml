        var month = d.getMonth() + 1;
        var day = d.getDate();

        var currentDate = d.getFullYear() + '-' + (month < 10 ? '0' : '') + month + '-' + '01'; //(day < 10 ? '0' : '') + day + '';
        currentDate = '2021-12-31'; //For syncing old data


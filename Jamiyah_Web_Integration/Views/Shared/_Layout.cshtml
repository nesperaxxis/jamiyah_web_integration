        var apiKey = 'N2H8LY0FqGGnnRftNbbFnzXVNqfR8YCp'; //'piRUbJ7d4AoXlH1TADBO';
        var client = 'jamiyaeducenterUvZFySx3c8gy'; //'jmdev';

        //var baseURL = 'https://dev-new.taidii.com/api/open/sap';
        //var apiKey = 'piRUbJ7d4AoXlH1TADBO';

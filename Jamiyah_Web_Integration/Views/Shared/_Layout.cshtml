                    error: function (request, error) {
                        $("#result-pays").text(JSON.stringify(request));
                    },
                    complete: function () {
                        //GET_FROM_SAP.ItemMasterData();
                    }
                });
            }
        };
        $(document).ready(function () {
            //TAIDII_Sync.StudentsData();
            //TAIDII_Sync.InvoiceData();
            TAIDII_Sync.ReceiptData();
            //GET_FROM_SAP.ItemMasterData();
        });

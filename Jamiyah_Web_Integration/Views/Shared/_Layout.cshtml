        <span>Student: </span><p id="result"></p>
        <span>Invoice: </span><p id="result-inv"></p>
        <span>Payment: </span><p id="result-pays"></p>
        <span>Items: </span><p id="result-itms"></p>
        <p id="result-pays"></p>
        @RenderSection("SPAViews", required: false)
